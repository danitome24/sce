<div class="main">
  <div class="content">
    <div class="content_bottom">
      <div class="wrap">
        <div class="content-bottom-left">
          <div class="categories">
            <ul>
              <h3><%= t ('browse_categories') %></h3>
              <% @categories.each do |category| %>
                  <% if @category.name === category.name %>
                      <li><%= link_to t(category.name), category_products_path(category), class: 'active' %></li>
                  <% else %>
                      <li><%= link_to t(category.name), category_products_path(category) %></li>
                  <% end %>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="content-bottom-right">
          <h3><%= t(@category.name) %></h3>
          <div class="section group">
            <% @products.each do |p| %>
                <%= render 'products/product_row', product: p, order_item: @order_item %>
            <% end %>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>