<div class="main">
  <div class="content">
    <div class="content_bottom">
      <div class="wrap">
        <div class="content-bottom-left">
          <div class="categories">
            <ul>
              <h3><%= t ('browse_categories') %></h3>
              <% @categories.each do |category| %>
                  <% if @category.name === category.name %>
                      <li><%= link_to t(category.name), category_products_path(category), class: 'active' %></li>
                  <% else %>
                      <li><%= link_to t(category.name), category_products_path(category) %></li>
                  <% end %>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="content-bottom-right">
          <h3><%= t(@category.name) %></h3>
          <div class="section group">
            <% @products.each do |p| %>
                <div class="grid_1_of_4 images_1_of_4">
                  <h4><a href="#"><%= p.name %></a></h4>
                  <a href="#">
                    <% if p.image? %>
                        <%= image_tag p.image.thumb.url %>
                    <% else %>
                        <img src="http://placehold.it/100x100"
                             alt="Alternate Text"/>
                    <% end %></a>
                  <div class="price-details">
                    <div class="price-number">
                      <p><span class="rupees"><%= p.price %> </span></p>
                    </div>
                    <div class="add-cart">
                      <h4><%= link_to 'Go to', category_product_path(id: p.id) %></h4>
                    </div>
                    <div class="clear"></div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>