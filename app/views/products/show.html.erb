<div class="main">
  <div class="wrap">
    <div class="preview-page">
      <div class="section group">
        <div class="cont-desc col-md-12">
          <ul class="back-links">
            <li><a href="#">Home</a> ::</li>
            <li><a href="#">Product Page</a> ::</li>
            <li>Product Name</li>
            <div class="clear"></div>
          </ul>
          <div class="product-details">
            <div class="grid col-md-2">
              <%= image_tag @product.image.thumb.url %>
            </div>
            <div class="desc col-md-5">
              <h2><%= @product.name %></h2>
              <p><%= @product.description %></p>
              <%= form_for @order_item, remote: true do |f| %>
                  <div class="price">
                    <p><%= t('price') %>: <span><%= @product.price %>â‚¬</span></p>
                  </div>
                  <div class="share-desc">
                    <div class="share">
                      <p><%= t('number_units') %>:</p>
                      <%= f.hidden_field :product_id, value: @product.id %>
                      <%= f.number_field :quantity, value: 1, min: 1 %>
                    </div>
                    <div class="clear"></div>
                  </div>
                  <div class="row">
                    <div class="col-md-8">
                      <%= f.submit t('add_cart'), class: 'btn btn-primary' %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
