<ul class="nav navbar-nav navbar-right">
  <li><p class="navbar-text login-text"><%= t('account_already') %></p></li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b><%= t('sign_in') %></b> <span class="caret"></span></a>
    <ul id="login-dp" class="dropdown-menu">
      <li>
        <div class="row">
          <div class="col-md-12">
            <%= t('login_via') %>
            <div class="social-buttons">
              <a href="#" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook</a>
              <a href="#" class="btn btn-tw"><i class="fa fa-twitter"></i> Twitter</a>
            </div>
            <%= t('or') %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "login-nav"}) do |f| %>
                <div class="form-group">
                  <%= f.label :email %><br/>
                  <%= f.email_field :email, autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.label :password %><br/>
                  <%= f.password_field :password, autocomplete: "off" %>
                  <div class="help-block text-right">
                    <%= link_to t('forget_password'), new_password_path(resource_name) %></div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary btn-block"><%= t('sign_in') %></button>
                </div>
                <div class="checkbox">
                  <label>
                    <% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                    <% end -%>
                  </label>
                </div>
            <% end %>
          </div>
          <div class="bottom text-center">
            <%= t('new_here') %> <%= link_to('Join us', new_user_registration_path) %>
          </div>
        </div>
      </li>
    </ul>
  </li>
</ul>