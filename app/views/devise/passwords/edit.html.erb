<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                 html: {method: :put, role: 'form', class: 'form-horizontal'}) do |f| %>
        <fieldset>
          <legend><%= t('change_password') %></legend>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('new_password'), class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, t('confirm_new_password'), class: 'col-sm-3 control-label' %>
            <div class="col-sm-9">
              <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <%= f.submit t('change_password'), class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>