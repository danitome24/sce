<div class="container-fluid">
  <div class="row">
    <% if @products.present? %>
        <% @products.each do |p| %>
            <%= render 'products/product_row', product: p %>
        <% end %>
    <% else %>
        <div class="col-md-offset-2 col-md-8">
          <p><%= t('no_products_found_search') %><%= params[:search] %>.</p>
        </div>
    <% end %>
  </div>
</div>
