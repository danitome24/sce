<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <legend>Categories</legend>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Actions <%= link_to new_category_path, class: 'add-button link-color-black' do %>
              <span class="glyphicon glyphicon-plus"></span>Add</th><% end %>
      </thead>
      <tbody>
      <% @categories.each do |c| %>
        <tr>
          <td clasS="col-md-3"><%= c.name %></td>
          <td class="col-md-1"><%= link_to edit_category_path(c), :class => 'link-color-black' do %>
              <span class="glyphicon glyphicon-pencil"></span>
          <% end %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
